// This import applies a global reset to any page that imports this stylesheet.
@import blueprint/reset

// To configure blueprint, edit the partials/base.sass file.
@import partials/base

// Import all the default blueprint modules so that we can access their mixins.
@import "blueprint"

// Import the non-default scaffolding module.
@import "blueprint/scaffolding"

@import compass/utilities

// To generate css equivalent to the blueprint css but with your configuration applied, uncomment:
// +blueprint

//Recommended Blueprint configuration with scoping and semantic layout:
+blueprint-typography
+blueprint-scaffolding

body
  +blueprint-utilities
  +blueprint-debug
  +blueprint-interaction
  // Remove the scaffolding when you're ready to start doing visual design.
  // Or leave it in if you're happy with how blueprint looks out-of-the-box

form
  +blueprint-form

// Page layout can be done using mixins applied to your semantic classes and IDs:
body
  #sidebar
    // One fourth of the grid columns, rounding down. With 24 cols, this is 6.
    $sidebar_columns: floor($blueprint_grid_columns / 4)
    // true means it's the last column in the row
    +column($sidebar_columns, true)
  #content
    // 3/4 grid columns, rounding up.
    // With 24 cols, this is 18.
    $content_columns: ceil(3 * $blueprint_grid_columns / 4)
    +column($content_columns)

body
  #container
    +container
    &.development
      +showgrid

  #header, #footer
    +column($blueprint_grid_columns)

body
  :font-family "Georgia", "Times", "serif"
  :font-size 16px
  :line-height 1.375
  p
    :margin 0px 0px 1.375em

body
  header#header
    a
      +hover-link

body
  footer#footer
    :width 100%
    :text-align center
    nav
      ul
        :list-style none
        li
          :display inline
          :text-align center
          :padding 0 0.5em
          a
            +hover-link

body
  #sidebar
    +push-margins(1)
    nav
      ul
        +no-bullets
        :margin 0px
        :margin-top -0.375em
        :padding-left 0px
      a
        +hover-link

=alt
  :color #666
  :font-family "Palatino", "Georgia", "serif"
  :font-style italic
  :font-weight normal
  a
    +hover-link

body
  .subtitle
    :font-size 2em
    p
      :margin 0px 0px 0.5em
    +alt
